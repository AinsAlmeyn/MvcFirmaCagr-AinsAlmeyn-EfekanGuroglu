@model MvcFirmaCagrı.Models.Entity.Cagrilartbl
@{
    ViewBag.Title = "cagrıgetir";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<h2>cagrı Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("CagrıyıDuzenle", "Default", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, 4, 2, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Değişiklikleri Kaydet</button>
}



